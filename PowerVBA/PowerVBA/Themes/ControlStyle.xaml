                <ControlTemplate TargetType="{x:Type c:RecentFileListViewItem}">
                    <Grid
                        x:Name="mainGrid"
                        Background="{TemplateBinding Background}"
                        ContextMenu="{TemplateBinding ContextMenu}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Rectangle
                            Margin="5"
                            Fill="White"
                            Stroke="LightGray"
                            StrokeThickness="1" />
                        <Image
