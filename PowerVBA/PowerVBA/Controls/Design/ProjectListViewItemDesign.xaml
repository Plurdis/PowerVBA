<UserControl x:Class="PowerVBA.Controls.Design.ProjectListViewItemDesign"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerVBA.Controls.Design"
             mc:Ignorable="d" 
             d:DesignHeight="180">
    <Grid Width="Auto" Height="180">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.RowSpan="2" Grid.ColumnSpan="3" Fill="#FFFCE4DC"/>
        <Rectangle Margin="10" Fill="White"/>
        <Image Width="202" Height="113" Margin="10"/>
        <TextBlock Text="새 프레젠테이션" HorizontalAlignment="Left" Grid.Row="1" Margin="10" VerticalAlignment="Top" FontWeight="Bold"/>
    </Grid>
</UserControl>
