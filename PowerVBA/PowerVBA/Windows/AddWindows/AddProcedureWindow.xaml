<w:ChromeWindow x:Class="PowerVBA.Windows.AddWindows.AddProcedureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:w="clr-namespace:PowerVBA.Windows"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerVBA.Windows.AddWindows"
                xmlns:c="clr-namespace:PowerVBA.Controls.Customize"
                mc:Ignorable="d"
        Title="프로시져 추가" Height="300" Width="500" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="{x:Type c:ImageRadioButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type c:ImageRadioButton}">
                        <Grid Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Image Width="30" Source="{TemplateBinding Source}" Margin="10,5"/>
                            <TextBlock Grid.Column="1" Margin="0,0,10,0" FontSize="15" VerticalAlignment="Center" Text="{TemplateBinding Content}"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Background" Value="#FFFCE4DC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFFCE4DC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <c:ImageRadioButton x:Name="btnClass" IsChecked="True" Content="Sub" HorizontalAlignment="Center" Source="/PowerVBA;component/Resources/Icon/MethodSubIcon.png"/>
                <c:ImageRadioButton x:Name="btnModule" Grid.Column="1" Content="Function" HorizontalAlignment="Center" Source="/PowerVBA;component/Resources/Icon/MethodIcon.png" />
                <c:ImageRadioButton x:Name="btnForm" Grid.Column="2" Content="Property" HorizontalAlignment="Center" Source="/PowerVBA;component/Resources/Icon/PropertyIcon.png" />
            </Grid>
            
            <Grid Margin="10,20,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="이름 : " FontSize="15"/>
                <TextBox x:Name="TBName" Grid.Column="1" FontSize="15"/>
            </Grid>
            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <c:ImageRadioButton x:Name="btnPrivate" IsChecked="True" Content="Private" HorizontalAlignment="Center" Source="/PowerVBA;component/Resources/Icon/LockIcon.png"/>
                <c:ImageRadioButton x:Name="btnPublic" Grid.Column="1" Content="Public" HorizontalAlignment="Center" Source="/PowerVBA;component/Resources/Icon/UnLockIcon.png" />
            </Grid>
            <Grid Margin="0,15,0,0" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CloseBtn" Grid.Column="0" Content="취소" Padding="30,5"/>
                <Button x:Name="AddBtn" Grid.Column="2" Content="확인" Padding="30,5" />
            </Grid>
        </StackPanel>
    </Grid>
</w:ChromeWindow>
