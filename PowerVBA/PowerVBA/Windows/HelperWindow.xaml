<local:ChromeWindow
    x:Class="PowerVBA.Windows.HelperWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PowerVBA.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PowerVBA 도움말"
    Width="1000"
    Height="650"
    AllowsTransparency="True"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <!--  1200  650  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="2">
            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Grid>
                                    <ContentPresenter Content="{TemplateBinding Content}"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>                
                </Style>
            </Grid.Resources>
            <WrapPanel HorizontalAlignment="Left" Margin="5">
                <Button Background="Transparent" BorderBrush="Transparent">
                    <Button.Content>
                        <Image
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/PowerVBA;component/Resources/Icon/HomeBtn.png" />
                    </Button.Content>
                </Button>
                <Button Background="Transparent" BorderBrush="Transparent">
                    <Button.Content>
                        <Image
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/PowerVBA;component/Resources/Icon/BackBtn.png" />
                    </Button.Content>
                </Button>
                <Button Background="Transparent" BorderBrush="Transparent">
                    <Button.Content>
                        <Image
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/PowerVBA;component/Resources/Icon/FrontBtn.png" />
                    </Button.Content>
                </Button>
                <Button Background="Transparent" BorderBrush="Transparent">
                    <Button.Content>
                        <Image
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/PowerVBA;component/Resources/Icon/UpperBtn.png" />
                    </Button.Content>
                </Button>
            </WrapPanel>
        </Grid>
        <ListView Grid.Row="1" Margin="5" />
        <ScrollViewer
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,25"
            VerticalScrollBarVisibility="Auto">
            <Frame
                x:Name="HelpFrame"
                Grid.Column="1"
                Content="{StaticResource ConditionalHelp}"
                NavigationUIVisibility="Hidden" />
        </ScrollViewer>

    </Grid>
</local:ChromeWindow>
