        <TabItem Foreground="Black" Style="{StaticResource BlankTabItemStyle}">
            <Grid x:Name="MainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="140" />
                    <RowDefinition />
                    <RowDefinition Height="23" />
                </Grid.RowDefinitions>

                <Grid>

                    <TabControl
                        x:Name="menuTabControl"
                        Background="White"
                        BorderBrush="#FFD4D4D4"
                        SelectedIndex="1"
                        Style="{StaticResource TabControlStyle}">
                        <TabControl.Resources>
                            <Style BasedOn="{StaticResource GroupBoxStyle}" TargetType="{x:Type GroupBox}" />
                            <Style BasedOn="{StaticResource TabItemStyle}" TargetType="{x:Type TabItem}" />
                        </TabControl.Resources>
                        <TabItem
                            x:Name="fileTab"
                            Header="파일"
                            Style="{StaticResource FileTabItemStyle}" 
                            PreviewMouseDown="FileTab_PreviewMouseDown"/>
                        <TabItem Header="홈">
                            <WrapPanel VirtualizingStackPanel.VirtualizationMode="Recycling">
                                <GroupBox Header="클립보드">
                                    <WrapPanel>
                                        <c:ImageButton
                                            x:Name="BtnCopy"
                                            BackImage="Resources/Icon/CopyIcon.png"
                                            Content="복사"
                                            ButtonClick="BtnCopy_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="복사 (Ctrl+C)" Text="현재 코드 편집기의&#x0a;내용을 복사합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                        <c:ImageButton
                                            x:Name="BtnPaste"
                                            BackImage="Resources/Icon/ClipboardIcon.png"
                                            Content="붙여넣기"
                                            ButtonClick="BtnPaste_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="붙여넣기 (Ctrl+V)" Text="클립보드의 내용을 문서를 붙여&#x0a;넣습니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                    </WrapPanel>
                                </GroupBox>
                                <Border
                                    Width="1"
                                    Margin="0,4"
                                    Background="#E1E1E1" />
                                <GroupBox Header="작업">
                                    <WrapPanel>
                                        <c:ImageButton
                                            x:Name="btnUndo"
                                            BackImage="Resources/Icon/UndoIcon.png"
                                            Content="실행 취소"
                                            ButtonClick="BtnUndo_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="실행 취소 (Ctrl+Z)" Text="가장 최근에 실행했던 작업을 취소합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                        <c:ImageButton
                                            x:Name="btnRedo"
                                            BackImage="Resources/Icon/RedoIcon.png"
                                            Content="다시 실행"
                                            ButtonClick="BtnRedo_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="실행 취소 (Ctrl+Z)" Text="가장 최근에 취소했던 작업을 다시 실행합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                    </WrapPanel>
                                </GroupBox>
                                <Border
                                    Width="1"
                                    Margin="0,4"
                                    Background="#E1E1E1" />
                                <GroupBox Header="슬라이드 관리">
                                    <WrapPanel>
                                        <c:ImageButton
                                            x:Name="BtnNewSlide"
                                            BackImage="Resources/Icon/NewSlideIcon.png"
                                            Content="새 슬라이드"
                                            ButtonClick="BtnNewSlide_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="새 슬라이드" Text="현재 프레젠테이션에 슬라이드를 추가합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                        <c:ImageButton
                                            x:Name="btnDelSlide"
                                            BackImage="Resources/Icon/DeleteSlideIcon.png"
                                            Content="슬라이드&#x0a;삭제"
                                            ButtonClick="BtnDelSlide_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="슬라이드 삭제" Text="현재 프레젠테이션에 슬라이드를 삭제합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                    </WrapPanel>
                                </GroupBox>
                                <Border
                                    Width="1"
                                    Margin="0,4"
                                    Background="#E1E1E1" />
                                <GroupBox Header="도움말">
                                    <WrapPanel>
                                        <c:ImageButton
                                            x:Name="btnHelp"
                                            BackImage="Resources/Icon/HelpIcon.png"
                                            Content="도움말 열기"
                                            ButtonClick="BtnHelp_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="도움말 열기" Text="PowerVBA에 대한 도움말을 열어 확인합니다."/>
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                    </WrapPanel>
                                </GroupBox>
                                <Border
                                    Width="1"
                                    Margin="0,4"
                                    Background="#E1E1E1" />
                                <GroupBox Header="탭 이동">
                                    <WrapPanel>
                                        <c:ImageButton
                                            x:Name="BtnToPPT"
                                            BackImage="Resources/Icon/pptIcon.png"
                                            Content="파워포인트로&#x0a;이동"
                                            ButtonClick="BtnToPPT_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="파워포인트로 이동" Text="파워포인트 창을 활성화 시킵니다."/>
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                    </WrapPanel>
                                </GroupBox>
                                <Border
                                    Width="1"
                                    Margin="0,4"
                                    Background="#E1E1E1" />
                            </WrapPanel>
                        </TabItem>
                        <TabItem Header="삽입">
                            <WrapPanel VirtualizingStackPanel.VirtualizationMode="Recycling">
                                <GroupBox Header="파일 삽입">
                                    <WrapPanel>
                                        <c:ImageButton
                                            x:Name="btnAddClass"
                                            BackImage="Resources/Icon/ClassIcon.png"
                                            Content="클래스 추가"
                                            ButtonClick="BtnAddClass_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="클래스 추가" Text="현재 VBA 프로젝트에 클래스를 추가합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                        <c:ImageButton
                                            x:Name="btnAddModule"
                                            BackImage="Resources/Icon/ModuleIcon.png"
                                            Content="모듈 추가"
                                            ButtonClick="BtnAddModule_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="모듈 추가 (Ctrl+Shift+A)" Text="현재 VBA 프로젝트에 모듈을 추가합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                        <c:ImageButton
                                            x:Name="btnAddForm"
                                            BackImage="Resources/Icon/FormIcon.png"
                                            Content="사용자 폼&#x0a;추가"
                                            ButtonClick="BtnAddForm_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="사용자 폼 추가" Text="현재 VBA 프로젝트에 사용자 폼을 추가합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                    </WrapPanel>
                                </GroupBox>
                                <Border
                                    Width="1"
                                    Margin="0,4"
                                    Background="#E1E1E1" />
                                <GroupBox Header="프로시져 삽입">
                                    <WrapPanel>
                                        <c:ImageButton
                                            x:Name="btnAddSub"
                                            BackImage="Resources/Icon/MethodSubIcon.png"
                                            Content="Sub&#x0a;함수 추가"
                                            IsEnabled="False"
                                            ButtonClick="BtnAddSub_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="Sub 함수 추가 (Ctrl+Shift+D)" Text="현재 VBA 프로젝트에 Sub 함수를 추가합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                        <c:ImageButton
                                            x:Name="btnAddFunc"
                                            BackImage="Resources/Icon/MethodIcon.png"
                                            Content="Function&#x0a;함수 추가"
                                            IsEnabled="False"
                                            ButtonClick="BtnAddFunc_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="Function 함수 추가" Text="현재 VBA 프로젝트에 Function 함수를 추가합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                        <c:ImageButton
                                            x:Name="btnAddProp"
                                            BackImage="Resources/Icon/PropertyIcon.png"
                                            Content="Property&#x0a;추가"
                                            IsEnabled="False"
                                            ButtonClick="BtnAddProp_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="Property 추가" Text="현재 VBA 프로젝트에 Property를 추가합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                    </WrapPanel>
                                </GroupBox>
                                <Border
                                    Width="1"
                                    Margin="0,4"
                                    Background="#E1E1E1" />
                                <GroupBox Header="변수/상수 삽입">
                                    <WrapPanel>
                                        <c:ImageButton
                                            x:Name="btnAddVar"
                                            BackImage="Resources/Icon/VariableIcon.png"
                                            Content="변수 추가"
                                            IsEnabled="False"
                                            ButtonClick="BtnAddVar_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="변수 추가 (Ctrl+Shift+V)" Text="현재 VBA 프로젝트에 변수를 추가합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                        <c:ImageButton
                                            x:Name="btnAddConst"
                                            BackImage="Resources/Icon/ConstIcon.png"
                                            Content="상수 추가"
                                            IsEnabled="False"
                                            ButtonClick="BtnAddConst_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="상수 추가" Text="현재 VBA 프로젝트에 상수를 추가합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                    </WrapPanel>
                                </GroupBox>
                                <Border
                                    Width="1"
                                    Margin="0,4"
                                    Background="#E1E1E1" />
                                <GroupBox Header="트리거 삽입">
                                    <WrapPanel>
                                        <c:ImageButton
                                            x:Name="btnAddMouseOverTrigger"
                                            BackImage="Resources/Icon/MouseOverIcon.png"
                                            Content="MouseOver&#x0a;트리거 추가"
                                            IsEnabled="False"
                                            ButtonClick="BtnAddMouseOverTrigger_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="MouseOver 트리거 추가" Text="마우스를 위로 올리면 발생하는 트리거를 추가합니다."/>
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>

                                        <c:ImageButton
                                            x:Name="btnAddMouseClickTrigger"
                                            BackImage="Resources/Icon/MouseClickIcon.png"
                                            Content="MouseClick&#x0a;트리거 추가"
                                            IsEnabled="False"
                                            ButtonClick="BtnAddMouseClickTrigger_ButtonClick" >
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="MouseClick 트리거 추가" Text="마우스를 클릭하면 발생하는 트리거를 추가합니다."/>
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                        
                                    </WrapPanel>
                                </GroupBox>
                                <Border
                                    Width="1"
                                    Margin="0,4"
                                    Background="#E1E1E1" />
                                
                            </WrapPanel>
                        </TabItem>
                        <TabItem Header="프로젝트">
                            <WrapPanel VirtualizingStackPanel.VirtualizationMode="Recycling">
                                <GroupBox Header="구성 요소">
                                    <WrapPanel>
                                        <c:ImageButton
                                            x:Name="PreDeclareFuncBtn"
                                            BackImage="Resources/Icon/AddFuncsIcon.png"
                                            Content="미리 정의된&#x0a;함수 추가"
                                            ButtonClick="PreDeclareFuncBtn_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="미리 정의된 함수 추가" Text="PowerVBA에서 미리 정의 해둔 함수들을 추가/제거 합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                        <!--<c:ImageButton
                                            x:Name="PreDeclareAPIBtn"
                                            BackImage="Resources/Icon/AddFuncsIcon.png"
                                            Content="미리 정의된&#x0a;API 추가"
                                            ButtonClick="PreDeclareFuncBtn_ButtonClick" />-->

                                        <c:ImageButton
                                            x:Name="addRefBtn"
                                            BackImage="Resources/Icon/ReferenceIcon.png"
                                            Content="참조 추가" 
                                            ButtonClick="AddRefBtn_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="참조 추가" Text="현재 파워포인트의 참조를 추가/제거합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                    </WrapPanel>
                                </GroupBox>
                                <Border
                                    Width="1"
                                    Margin="0,4"
                                    Background="#E1E1E1" />
                                <GroupBox Header="코드 관리">
                                    <WrapPanel>
                                        <c:ImageButton
                                            x:Name="CheckError"
                                            BackImage="Resources/Icon/AddFuncsIcon.png"
                                            Content="코드 분석"
                                            ButtonClick="CheckError_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="코드 분석" Text="현재 PowerVBA 프로젝트의 모든 파일의 오류를 확인합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                    </WrapPanel>
                                </GroupBox>
                                <Border
                                    Width="1"
                                    Margin="0,4"
                                    Background="#E1E1E1" />
                                <GroupBox Header="파일 동기화">
                                    <WrapPanel>
                                        <c:ImageButton
                                            x:Name="btnFileSync"
                                            IsEnabled="False"
                                            BackImage="Resources/Icon/SyncIcon.png"
                                            Content="현재 파일&#x0a;동기화"
                                            ButtonClick="BtnFileSync_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="현재 파일 동기화 (Ctrl+S)" Text="현재 선택된 파일을 VBA 프로젝트와 동기화시킵니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                        <c:ImageButton
                                            x:Name="btnAllFileSync"
                                            BackImage="Resources/Icon/AllSyncIcon.png"
                                            Content="모든 파일&#x0a;동기화"
                                            ButtonClick="BtnAllFileSync_ButtonClick">
                                            <c:ImageButton.ToolTip>
                                                <corec:CustomToolTip Title="모든 파일 동기화 (Ctrl+Shift+S)" Text="모든 변경된 파일들을 VBA 프로젝트와 동기화 시킨 뒤 저장합니다." />
                                            </c:ImageButton.ToolTip>
                                        </c:ImageButton>
                                    </WrapPanel>
                                </GroupBox>
                                <Border
                                    Width="1"
                                    Margin="0,4"
                                    Background="#E1E1E1" />
                            </WrapPanel>
                        </TabItem>
                    </TabControl>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="250" />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <t:ProjectAnalyzer x:Name="projAnalyzer" />
                    </Grid>

                    <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="180" />
                        </Grid.RowDefinitions>
                        <TabControl x:Name="codeTabControl">
                            <TabControl.Resources>
                                <Style BasedOn="{StaticResource CodeTabItemStyle}" TargetType="{x:Type c:CloseableTabItem}" />
                            </TabControl.Resources>

                            <!--<c:CloseableTabItem Header="API 추가/제거">
                                <t:APIManager/>
                            </c:CloseableTabItem>-->

                            <!--<c:CloseableTabItem Header="프로젝트 속성" Height="20">
                                <t:ProjectProperty/>
                            </c:CloseableTabItem>-->

                            <!--<c:CloseableTabItem Header="참조 관리자" Height="20">
                                <t:ReferenceManager/>
                            </c:CloseableTabItem>-->
                            <!--<c:CloseableTabItem Header="Module1.bas" Height="20">
                                <av:CodeEditor x:Name="codeEditor" Text="Dim A As Slide" FontFamily="DotumChe" SnapsToDevicePixels="True"/>
                            </c:CloseableTabItem>-->
                        </TabControl>

                        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" />
                        <t:ErrorList x:Name="errorList" Grid.Row="2" />
                    </Grid>
                    <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" />
                    <Grid Grid.Column="4">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <t:SolutionExplorer x:Name="solutionExplorer" />
                    </Grid>
                </Grid>
                <Grid Grid.Row="3">
                    <Rectangle Fill="#FFD24726" />
                    <TextBlock
                        x:Name="tbMessage"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="준비" />
                </Grid>
            </Grid>
        </TabItem>
        <TabItem Foreground="Black" Style="{StaticResource BlankTabItemStyle}">
            <Grid x:Name="RecentFileGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="343" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border Background="#FFD24726">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition Height="120" />
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock
                                Margin="20,35,0,0"
                                FontSize="40"
                                Foreground="White">
                                PowerVBA <Run
                                    x:Name="RunVersion"
                                    FontSize="20"
                                    Text="버전 없음" />
                            </TextBlock>

                            <TextBlock
                                Margin="20,20,0,0"
                                FontSize="20"
                                Foreground="White"
                                Text="최근에 사용한 항목" />

                        </StackPanel>
                        <TextBlock
                            x:Name="noRecentInfoTB"
                            Grid.Row="1"
                            Margin="30"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Foreground="White"
                            Text="최근에 열었던 프레젠테이션이(가) 없습니다. 프레젠테이션을(를) 찾아보려면 다른 프로젠테이션 열기을(를) 클릭하여 시작합니다."
                            TextWrapping="Wrap"
                            Visibility="Hidden" />
                        <ListView
                            x:Name="lvRecentFile"
                            Grid.Row="1"
                            Margin="15,20,15,0"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
